********************************Codi corregit i ben realitzat**********************************
*******************************main.c***********************************
#include <stdio.h>
#include "functions.h"

void main(){
	int n= 0, aux= 3;
	while (aux >= 0){
		n =	ask_number(n);
		aux= verify(n, aux);
	}
}

**********************functions.h**************************************
#ifndef FUNCTIONS_H_
#define FUNCTIONS_H_
#endif /* FUNCTIONS_H_ */

int ask_number(int);
int verify(int, int);

**********************functions.h**************************************
#include <stdio.h>

int ask_number(int n){
	printf("Introduce un n√∫mero entre 10 y 5000 (incluidos): ");
	scanf("%d", &n);
	return n;
}

int verify(int n, int aux){
	if (n <= 10 || n >= 5000){
		aux= aux - 1;
	}
	else {
		aux= -1;
	}
	printf("Intentos restantes: %d\n\n", aux+1);
	return aux;
}
